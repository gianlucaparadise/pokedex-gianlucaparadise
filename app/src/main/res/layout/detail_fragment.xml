<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewmodel"
            type="com.gianlucaparadise.pokedex.ui.detail.DetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.detail.DetailFragment">

        <ImageView
            android:id="@+id/img_pokemon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:imageFromUrl="@{viewmodel.imageUrl}"
            tools:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/txt_pokemon_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@{viewmodel.name}"
            android:transitionName="pokemonName"
            app:layout_constraintStart_toEndOf="@+id/img_pokemon"
            app:layout_constraintTop_toTopOf="@+id/img_pokemon"
            app:layout_constraintBottom_toTopOf="@+id/txt_label_type"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="Ditto" />

        <TextView
            android:id="@+id/txt_label_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/type_label"
            app:layout_constraintStart_toStartOf="@+id/txt_pokemon_name"
            app:layout_constraintTop_toBottomOf="@+id/txt_pokemon_name"
            app:layout_constraintBottom_toBottomOf="@+id/img_pokemon"/>

        <TextView
            android:id="@+id/txt_pokemon_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="@{viewmodel.oneLineType}"
            app:layout_constraintBottom_toBottomOf="@+id/txt_label_type"
            app:layout_constraintStart_toEndOf="@+id/txt_label_type"
            app:layout_constraintTop_toTopOf="@+id/txt_label_type"
            tools:text="Fire" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>